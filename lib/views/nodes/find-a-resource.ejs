<!-- Page header -->
<div class="campl-row campl-page-header">
  <div class="campl-wrap clearfix">
    <div class="campl-column12">
      <div class="campl-content-container">
        <div class="campl-breadcrumb" id="breadcrumb">
          <ul class="campl-unstyled-list campl-horizontal-navigation clearfix">
            <li class='first-child'>
              <a href="/" class="campl-home ir">Home</a>
            </li>
            <li>
              <a href="/"><%= title %></a>
            </li>
            <li>
              <p class="campl-current"><%= currentNode.title %></p>
            </li>
          </ul>
        </div>
        <h1 class="campl-page-title"><%= title %></h1>
      </div>
    </div>
  </div>
</div>

<div class="campl-row campl-page-header">
  <div class="campl-wrap clearfix campl-local-navigation" id="local-nav">
    <%- partials.navigation %>
  </div>

  <div class="campl-wrap clearfix campl-page-sub-title campl-recessed-sub-title">
    <div class="campl-content-container">
      <h2 class="campl-sub-title">Find a resource</h2>
    </div>
  </div>
</div>
<!-- page-header ends -->

<div class="campl-row campl-content campl-recessed-content">
  <div class="campl-wrap clearfix">
    <div class="campl-column8">

      <div class="campl-carousel clearfix campl-banner lg-banner-find-a-resource">
        <div class="campl-carousel-container">
          <ul class="campl-unstyled-list campl-slides">
            <li class="campl-slide campl-column12">
              <div class="image-container">
                <img alt="banner" title="banner" src="/public/images/find-a-resource-banner.jpg" class="campl-scale-with-grid" />
              </div>
              <div class="campl-slide-caption">
                <form class="campl-content-container lg-search-form" action="/find-a-resource" method="get">
                  <%- data.search %>
                </form>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- External links -->
      <section class="campl-content-container">
        <header class="campl-heading-container">
          <h2>External links</h2>
        </header>

        <div class="campl-top-padding lg-two-column-list">
          <div class="lg-column">
            <ul class='campl-unstyled-list campl-related-links'>
              <li><a href="http://wok.mimas.ac.uk/cgi-bin/wayf?idp=https://shib.raven.cam.ac.uk/shibboleth" target="_blank">Web of Knowledge</a></li>
              <li><a href="http://www.worldcat.org" target="_blank">World Cat</a></li>
              <li><a href="http://www.jstor.org" target="_blank">JSTOR</a></li>
            </ul>
          </div>

          <div class="lg-column">
            <ul class='campl-unstyled-list campl-related-links'>
              <li><a href="http://juc.lib.cam.ac.uk" target="_blank">Japanese Union Catalogues Library</a></li>
              <li><a href="http://www.fihrist.org.uk" target="_blank">FIHRIST</a></li>
              <li><a href="http://copac.ac.uk" target="_blank">COPAC</a></li>
            </ul>
          </div>
        </div>
      </section>
      <!-- External links ends -->
    </div>

    <div class="campl-column4 campl-secondary-content">
      <!-- Useful links -->
      <section class="campl-content-container">
        <header class="campl-heading-container">
          <h2>Useful links</h2>
        </header>
        <ul class='campl-unstyled-list campl-related-links'>
          <li><a href="http://www.lib.cam.ac.uk/eresources/access.html" target="_blank">Accessing eResources</a></li>
          <li><a href="http://www.lib.cam.ac.uk/eresources/help/journals/problem.php" target="_blank">Report a Problem Accessing eResources</a></li>
          <li><a href="http://cudl.lib.cam.ac.uk/" target="_blank">Cambridge University Digital Library</a></li>
          <li><a href="http://www.lib.cam.ac.uk/newton/" target="_blank">Newton</a></li>
          <li><a href="http://janus.lib.cam.ac.uk/" target="_blank">JANUS: University Archive</a></li>
        </ul>
      </section>
      <!-- Useful links ends -->

      <%- include ../partials/promo-researchskills.ejs %>
    </div>
    <!-- End of promo items -->
  </div>
</div>
