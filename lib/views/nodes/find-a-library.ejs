<!-- Page header -->
<% include ../partials/globals/page-header %>

<!-- Custom header -->
<div class="campl-row campl-page-header">

  <!-- Navigation -->
  <div class="campl-wrap clearfix campl-local-navigation" id="local-nav">
    <% include ../partials/globals/navigation %>
  </div>

  <!-- Page title -->
  <div class="campl-wrap clearfix campl-page-sub-title campl-recessed-sub-title">
    <div class="campl-column3 campl-spacing-column">&#160;</div>
    <div class="campl-column9">
      <div class="campl-content-container">
        <h2 class="campl-sub-title">Find a library</h2>
      </div>
    </div>
  </div>
</div>

<!-- Content -->
<div class="campl-row campl-content campl-recessed-content">
  <div class="campl-wrap clearfix">
    <div class="campl-column3">
      <div class="campl-tertiary-navigation lg-libraries-panel">
        <div class="campl-tertiary-navigation-structure">
          <div class="lg-filters">
            <div class="campl-search-input ls-search-input">
              <div class="lg-search-input-wrap">
                <input class="js-mini-search" type="text" placeholder="e.g. 'University Library'" />
              </div>
              <input type="image" class="campl-search-submit lg-search-submit" alt="Search" src="/public/images/interface/btn-search-inpage.png" />
            </div>

            <label>Filter libraries by:</label>

            <div class="btn-group lg-dropdown-selector lg-dropdown-selector-alphabet js-dropdown-selector-alphabet">
              <div class="btn btn-sm dropdown-toggle lg-dropdown-toggle" data-toggle="dropdown">
                <span class="js-value lg-dropdown-value" data-default-label="A-Z">A-Z</span>
                <button class="hidden lg-btn-remove js-remove"><span class="lg-icon-remove"></span></button>
              </div>
              <ul class="dropdown-menu">
                <% for (character in data.alphabet) { %>
                  <li>
                    <a href="#" class="js-option" data-value="<%= data.alphabet[character] %>"><%= data.alphabet[character] %></a>
                  </li>
                <% } %>
              </ul>
            </div>

            <div class="btn-group lg-dropdown-selector js-dropdown-selector-area hidden">
              <div class="btn btn-sm dropdown-toggle lg-dropdown-toggle" data-toggle="dropdown">
                <span class="js-value lg-dropdown-value" data-default-label="Distance">Distance</span>
                <button class="hidden lg-btn-remove js-remove"><span class="lg-icon-remove"></span></button>
              </div>
              <ul class="dropdown-menu">
                <% for (range in data.ranges) { %>
                  <li>
                    <a href="#" class="js-option" data-value="<%= data.ranges[range].value %>"><%= data.ranges[range].label %></a>
                  </li>
                <% } %>
              </ul>
            </div>
          </div>
          <div class="list-group lg-libraries js-libraries" data-libraries="<%= data.libraries %>"></div>
        </div>
      </div>
    </div>
    <div class="campl-column9">
      <div class="js-maps-container lg-libraries-maps-container"></div>
    </div>
  </div>
</div>
